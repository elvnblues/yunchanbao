<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_bg" >

    <include
        android:id="@+id/include_top_title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        layout="@layout/title" />

    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_top_title" >

        <LinearLayout
            android:id="@+id/ll_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/ll_ad_imgscroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.imeet.yunchanbao.myview.MyImgScroll
                    android:id="@+id/ms_ad_pager"
                    android:layout_width="match_parent"
                    android:layout_height="120dip" />

                <LinearLayout
                    android:id="@+id/ll_vb"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignBottom="@id/ms_ad_pager"
                    android:layout_marginTop="3dip"
                    android:gravity="center"
                    android:orientation="horizontal" />
            </RelativeLayout>

            <com.imeet.yunchanbao.myview.MyGridView
                android:id="@+id/gv_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:numColumns="3"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:verticalSpacing="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="#F2F2F2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <TextView
                    android:id="@+id/tv_specialty_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/main_specialty_store"
                    android:textColor="@color/text_color_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_specialty_store_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/main_more"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/list_divider_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/list_divider_line"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_milk_special"
                    android:layout_width="0dip"
                    android:layout_height="150dip"
                    android:layout_weight="1"
                    android:background="@color/title_blue" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="150dip"
                    android:layout_marginLeft="0.5dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_goodproduct"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:background="@color/title_pink" />

                    <ImageView
                        android:id="@+id/iv_babybed"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="0.5dip"
                        android:layout_weight="1"
                        android:background="@color/hu_blue" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/list_divider_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:background="@color/list_divider_line"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e19637"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="童鞋" />

                    <ImageView
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:background="#91c64a" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.5dip"
                    android:layout_weight="1"
                    android:background="#e19637"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="奶瓶" />

                    <ImageView
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:background="#91c64a" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.5dip"
                    android:layout_weight="1"
                    android:background="#e19637"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="尿不湿" />

                    <ImageView
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:background="#91c64a" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.5dip"
                    android:layout_weight="1"
                    android:background="#e19637"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="童装" />

                    <ImageView
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:background="#91c64a" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/list_divider_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <TextView
                    android:id="@+id/tv_recommendthesale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/main_recommendthesale"
                    android:textColor="@color/text_color_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_recommendthesale_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/main_more"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>