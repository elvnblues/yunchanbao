<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/include_top_title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        layout="@layout/title" />

    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_top_title" >

        <LinearLayout
            android:id="@+id/ll_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/ll_ad_imgscroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.imeet.yunchanbao.myview.MyImgScroll
                    android:id="@+id/ms_ad_pager"
                    android:layout_width="match_parent"
                    android:layout_height="120dip" />

                <LinearLayout
                    android:id="@+id/ll_vb"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignBottom="@id/ms_ad_pager"
                    android:layout_marginTop="3dip"
                    android:gravity="center"
                    android:orientation="horizontal" />
            </RelativeLayout>

            <include
                android:id="@+id/include_text_receivebroadcast"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/text_receivebroadcast" />

            <com.imeet.yunchanbao.myview.MyGridView
                android:id="@+id/gv_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:numColumns="3"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:verticalSpacing="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dip"
                android:background="@color/main_line2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <ImageView
                    android:id="@+id/iv_specialty_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/img_specialty_store"
                    android:scaleType="center" />

                <TextView
                    android:id="@+id/tv_specialty_store_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/main_more"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/main_line1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_line1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_specialty_pro_1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/img_specialty_pro1"
                    android:scaleType="center" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.5dip"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_iv_specialty_pro_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/img_specialty_pro2"
                        android:scaleType="center" />

                    <ImageView
                        android:id="@+id/iv_iv_specialty_pro_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.5dip"
                        android:background="@drawable/img_specialty_pro3"
                        android:scaleType="center" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/main_line1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_iv_specialty_pro_4"
                        android:layout_width="match_parent"
                        android:layout_height="80dip"
                        android:background="@drawable/img_specialty_pro4"
                        android:scaleType="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="童鞋" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.5dip"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_iv_specialty_pro_5"
                        android:layout_width="match_parent"
                        android:layout_height="80dip"
                        android:background="@drawable/img_specialty_pro5"
                        android:scaleType="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="奶瓶" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.5dip"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_iv_specialty_pro_6"
                        android:layout_width="match_parent"
                        android:layout_height="80dip"
                        android:background="@drawable/img_specialty_pro6"
                        android:scaleType="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="尿不湿" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.5dip"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_iv_specialty_pro_7"
                        android:layout_width="match_parent"
                        android:layout_height="80dip"
                        android:background="@drawable/img_specialty_pro7"
                        android:scaleType="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="童装" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dip"
                android:background="@color/main_line2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <ImageView
                    android:id="@+id/tv_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/img_activity_info" />

                <!--
                     <TextView
                    android:id="@+id/tv_activity_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/main_more"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14sp" />
                -->
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/main_line1" />

            <com.imeet.yunchanbao.myview.MyListView
                android:id="@+id/lv_main_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:cacheColorHint="#FFFFFFFF"
                android:divider="@color/main_line1"
                android:dividerHeight="0.5dip"
                android:fadingEdge="none" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dip"
                android:background="@color/main_line2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <ImageView
                    android:id="@+id/tv_infanteducation_manual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/img_infanteducation_manual_txt" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/main_line1" />

            <com.imeet.yunchanbao.myview.MyListView
                android:id="@+id/lv_main_iducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:cacheColorHint="#FFFFFFFF"
                android:divider="@color/main_line1"
                android:dividerHeight="0.5dip"
                android:fadingEdge="none" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/main_line1" />

            <TextView
                android:id="@+id/tv_main_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="18dip"
                android:paddingTop="18dip"
                android:text="@string/text_main_hint"
                android:textColor="@color/text_color_gray"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>